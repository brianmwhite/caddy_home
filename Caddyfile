{$MY_DOMAIN} {
	root * /srv
	file_server
	handle_path /api/* {
		reverse_proxy piapi:5015
	}

	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
	}
}

ha.{$MY_DOMAIN} {
	reverse_proxy 192.168.7.149:8123
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
	}
}

api.{$MY_DOMAIN} {
	reverse_proxy piapi:5015
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
	}
}

whoami.{$MY_DOMAIN} {
	reverse_proxy whoami:80
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
	}
}
